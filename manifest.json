{
    "manifest_version": 3,
    "name": "YouTube Focus: Hide Recommendations",
    "version": "1.0",
    "description": "Hides video recommendations and unwanted playlists on YouTube, while keeping your playlists visible. Includes a toggle to enable or disable the functionality.",
    "permissions": [
      "activeTab", "storage", "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon/icon.png",
        "48": "icon/icon.png",
        "128": "icon/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon/icon.png",
      "48": "icon/icon.png",
      "128": "icon/icon.png"
    }
  }
  